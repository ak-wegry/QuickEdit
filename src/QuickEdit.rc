#include "resource.h"

// Icon定義
IDR_ICON ICON DISCARDABLE "QuickEdit.ico"

// メニュー定義
IDR_MENU MENU DISCARDABLE
BEGIN
	POPUP "ファイル(&F)"
	BEGIN
		MENUITEM "ファイルとして実行\te",			IDM_FILE_EXEC
		MENUITEM "ClipBoard変更時のActivate\ta",	IDM_FILE_AUTO
		MENUITEM "DropFile時のNWドライブ名展開",	IDM_FILE_NWDRV
		MENUITEM SEPARATOR
		MENUITEM "終了\tQ",							IDM_FILE_EXIT
	END
	POPUP "編集(&E)"
	BEGIN
		MENUITEM "元に戻す\tCtrl+Z",				IDM_EDIT_UNDO
		MENUITEM SEPARATOR
		POPUP "空白/タブ削除(trim)"
		BEGIN
			MENUITEM "行頭+行末('>',全角含む)\tt",	IDM_EDIT_TRIM_SUIT
			MENUITEM "行頭+行末\tTb",				IDM_EDIT_TRIM_BOTH
			MENUITEM "行頭+行末(全角含む)\tTz",		IDM_EDIT_TRIM_ZEN
			MENUITEM "行頭\tTh",					IDM_EDIT_TRIM_HEAD
			MENUITEM "行頭('>'含む)\tT>",			IDM_EDIT_TRIM_MAIL
			MENUITEM "行末\tTe",					IDM_EDIT_TRIM_TAIL
		END
		POPUP "インデント"
		BEGIN
			MENUITEM "行頭の空白増加\t+",			IDM_EDIT_IND_INC
			MENUITEM "行頭の空白減少\t-",			IDM_EDIT_IND_DEC
		END
		POPUP "全角・半角変換"
		BEGIN
			MENUITEM "全角変換\tz",					IDM_EDIT_ZEN
			MENUITEM "半角変換(カナ除く)\th",		IDM_EDIT_HAN_ASC
			MENUITEM "半角変換(カナ含む)\tH",		IDM_EDIT_HAN_ALL
		END
		POPUP "大文字・小文字変換"
		BEGIN
			MENUITEM "大文字変換\tu",				IDM_EDIT_UPPER
			MENUITEM "小文字変換\tl",				IDM_EDIT_LOWER
		END
		MENUITEM "行結合\tj",						IDM_EDIT_JOIN
		MENUITEM "編集開始\ti",						IDM_EDIT_EDIT_MODE
		POPUP "文字/表示/改行変更"
		BEGIN
			MENUITEM "括り文字変更\t\"",			IDM_EDIT_ADJ_QUOT
			MENUITEM "日付文字変更\td",				IDM_EDIT_ADJ_DATE
			MENUITEM "ツリー表示変更\ty",			IDM_EDIT_ADJ_TREE
			MENUITEM "改行変換(LF→CRLF)\tCr",		IDM_EDIT_ADJ_CRLF
			MENUITEM "改行変換(CRLF→LF)\tCl",		IDM_EDIT_ADJ_LF
		END
		POPUP "ソート"
		BEGIN
			MENUITEM "昇順(自然順)\tSa",			IDM_EDIT_SORT_ASC_N
			MENUITEM "降順(自然順)\tSd",			IDM_EDIT_SORT_DSC_N
			MENUITEM "昇順(コード順)\tSA",			IDM_EDIT_SORT_ASC
			MENUITEM "降順(コード順)\tSD",			IDM_EDIT_SORT_DSC
		END
		MENUITEM SEPARATOR
		POPUP "文字列置換"
		BEGIN
			MENUITEM "検索/置換指定...\tR",			IDM_EDIT_SUB
			MENUITEM "置換繰返し\tr",				IDM_EDIT_SUB_REP
		END
		POPUP "書式変換"
		BEGIN
			MENUITEM "書式変換指定...\tF",			IDM_EDIT_FMT
			MENUITEM "書式変換繰返し\tf",			IDM_EDIT_FMT_REP
		END
		MENUITEM "日時挿入...\tD",					IDM_EDIT_INS_DATE
		MENUITEM SEPARATOR
		POPUP "マクロ実行"
		BEGIN
			MENUITEM "マクロ実行指定...\tM",		IDM_EDIT_MCR
			MENUITEM "マクロ実行繰返し\tm",			IDM_EDIT_MCR_REP
		END
	END
	POPUP "ヘルプ(&H)"
	BEGIN
		MENUITEM "ヘルプ表示(&H)",					IDM_HELP_HELP
		MENUITEM "ホットキー設定(&K)...",			IDM_HELP_HOTKEY
		MENUITEM SEPARATOR
		MENUITEM "バージョン情報(&A)",				IDM_HELP_VERSION
	END
END

// Dialog1定義
IDD_DIALOG1 DIALOG DISCARDABLE 0, 0, 160, 80
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "バージョン情報"
FONT 11, "ＭＳ Ｐゴシック"
BEGIN
	ICON  "IDR_ICON",                            IDC_STATIC,   8, 10,  20, 20
	LTEXT "QuickEdit - ClipBoard内文字編集",     IDC_STATIC,  30, 10, 120, 10
	LTEXT "Version 0.0.0 (YYYY/MM/DD)",          IDC_VERSION, 30, 22, 120, 10
	LTEXT "---------------------------",         IDC_STATIC,  30, 34, 120, 5
	LTEXT "Copyright(C) 2016 Akihito Ueguri",    IDC_STATIC,  30, 42, 120, 10
	DEFPUSHBUTTON  "OK", IDOK, 110, 60, 40, 12, WS_GROUP
END

